<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ifinalframework.plugins.aio.mybatis.JavaMapper">

    <resultMap id="JavaModel" type="org.ifinalframework.plugins.aio.mybatis.JavaModel">

    </resultMap>
    <sql id="table">
        t_java
    </sql>
    <sql id="columns">
        `id`
        , `name`, `age`
    </sql>
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        <include refid="table"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != name and name != ''">
                `name1`,
            </if>
            <if test="null != age">
                `age`,
            </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="null != name and name != ''">
                #{name},
            </if>
            <if test="null != age">
                #{age, typeHandler=org.ifinalframework.plugins.aio.mybatis.MyTypeHandler},
            </if>
        </trim>
    </insert>
    <select id="selectById" resultMap="JavaModel">
        SELECT
        <include refid="table"/>
        FROM
        <include refid="columns"/>
        <where>
            id = #{id}
        </where>
    </select>


</mapper>