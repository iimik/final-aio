<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ifinalframework.plugins.aio.mybatis.JavaMapper">
    <sql id="table">
        t_java
    </sql>
    <sql id="columns">
        `id`
        , `name`, `age`
    </sql>
    <select id="selectByIds" resultType="org.ifinalframework.plugins.aio.mybatis.JavaModel">
        SELECT
        <include refid="table"/>
        FROM
        <include refid="columns"/>
        <where>
            id IN
            <foreach collection="ids" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </select>


</mapper>